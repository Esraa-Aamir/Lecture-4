#include<iostream>
#include<string>
using namespace std;

int main()
{
	string name, hometown;
	int age;


	cout << "Enter your name: ";
	cin >> name;
	cout << "Enter your hometown: ";
	cin >> hometown;
	cout << "Enter your age: ";
	cin >> age;


	cout << "The name of the user: " << name << endl;
	cout << "Hometown: " << hometown << endl;
	cout << "Age: " << age << endl;


	 
	return 0;
}
